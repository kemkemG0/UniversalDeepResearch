{
  "name": "udr-cdk",
  "version": "1.0.0",
  "description": "Universal Deep Research CDK Infrastructure",
  "main": "lib/app.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "cdk": "cdk",
    "deploy": "npm run build && cdk deploy",
    "deploy:all": "npm run build && cdk deploy --all",
    "deploy:gateway": "npm run build && cdk deploy BedrockGatewayStack",
    "deploy:backend": "npm run build && cdk deploy UDRBackendStack",
    "deploy:frontend": "npm run build && cdk deploy UDRFrontendStack",
    "destroy": "cdk destroy --all",
    "synth": "npm run build && cdk synth",
    "diff": "npm run build && cdk diff"
  },
  "devDependencies": {
    "@types/node": "20.6.0",
    "aws-cdk": "2.179.0",
    "ts-node": "^10.9.1",
    "typescript": "~5.2.2"
  },
  "dependencies": {
    "@aws-cdk/aws-amplify-alpha": "2.179.0-alpha.0",
    "aws-cdk-lib": "2.179.0",
    "constructs": "^10.0.0",
    "source-map-support": "^0.5.21"
  }
}
